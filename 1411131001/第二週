#include <stdio.h>

int main(void)
{
	printf("請輸入三個數");
	printf("加總,平均,乘積,最大值和最小值");

		int a, b, c, largest = 0, smallest = 9999;
		
		scanf_s("%d %d %d", &a, &b, &c);

		if (a >= b) {
			if (a >= c)
				largest = a;
			else
				largest = b;
		}
		else if (c > b) {
			largest = c;
		}
		else { 
		    largest = b; }

		if (a >= b) {
				smallest = b;
		}
		if (b >= a) {
			     smallest = a;
		}
		if (c < smallest) {
			smallest = c;
		}

		printf("sum is %d\n", a + b + c);
		printf("average is %d\n", (a + b + c) / 3);
		printf("product is %d\n", a * b * c);
		printf("smallest is %d\n", smallest);
		printf("largest is %d\n", largest);
}
